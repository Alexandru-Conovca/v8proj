@{
    ViewBag.Title = "Панель администратора";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Панель администратора</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-8">
        <h1 class="text-3xl font-bold mb-6">Панель администратора</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Управление концептами -->
            <a href="/Admin/Concepts" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg">
                <h2 class="text-xl font-bold">Концепт-арты</h2>
                <p>Просмотр и модерация концептов</p>
            </a>

            <!-- Управление пользователями -->
            <a href="/Admin/Users" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg">
                <h2 class="text-xl font-bold">Пользователи</h2>
                <p>Управление зарегистрированными пользователями</p>
            </a>

            <!-- Настройки -->
            <a href="/Admin/Settings" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg">
                <h2 class="text-xl font-bold">Настройки</h2>
                <p>Конфигурация сайта</p>
            </a>
        </div>
    </div>
</body>
</html>
