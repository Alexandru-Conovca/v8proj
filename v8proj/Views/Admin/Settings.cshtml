@{
    ViewBag.Title = "Настройки администратора";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/theme.js"></script> <!-- подключаем внешний файл -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* Стиль для темной и светлой темы */
        .light-theme {
            --bg-color: white;
            --text-color: black;
            --button-bg: #3490dc;
        }

        .dark-theme {
            --bg-color: #2d3748;
            --text-color: white;
            --button-bg: #1a202c;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
        }

        button {
            background-color: var(--button-bg);
            color: white;
        }

            button:hover {
                background-color: #4c51bf;
            }
    </style>
</head>

<body class="light-theme">
    <!-- по умолчанию светлая тема -->

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">Настройки администратора</h1>

        <form method="post" action="@Url.Action("SaveSettings", "Admin")" class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <label for="siteName" class="block text-lg font-medium text-gray-700">Название сайта:</label>
                <input type="text" id="siteName" name="siteName" value="Concept Art Hub" class="mt-2 p-3 w-full border border-gray-300 rounded-md" />
            </div>

            <div class="mb-6">
                <label for="maxUploadSize" class="block text-lg font-medium text-gray-700">Максимальный размер загружаемых файлов (МБ):</label>
                <input type="number" id="maxUploadSize" name="maxUploadSize" value="10" class="mt-2 p-3 w-full border border-gray-300 rounded-md" />
            </div>

            <div class="mb-6">
                <label for="theme" class="block text-lg font-medium text-gray-700">Тема оформления:</label>
                <select id="theme" name="theme" class="mt-2 p-3 w-full border border-gray-300 rounded-md">
                    <option value="light">Светлая</option>
                    <option value="dark">Тёмная</option>
                </select>
            </div>

            <button type="submit" class="w-full px-4 py-3 rounded-md">Сохранить</button>
        </form>
    </main>
</body>
</html>
