using System;
@using System.Security.Policy
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход - Apple Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- Форма входа -->
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
            <h2 class="text-2xl font-bold mb-6 text-center text-black">Вход</h2>
            <form class="space-y-4">
                <div>
                    <label class="block text-gray-700 mb-2" for="email">Email</label>
                    <input type="email" id="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2" for="password">Пароль</label>
                    <input type="password" id="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black" required>
                </div>
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input type="checkbox" id="remember" class="mr-2">
                        <label for="remember" class="text-gray-700">Запомнить меня</label>
                    </div>
                    <a href="@Url.Action("ForgotPassword", "Home")" class="text-black hover:text-gray-700">Забыли пароль?</a>
                </div>
                <button type="submit" class="w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800">Войти</button>
            </form>
            <p class="mt-4 text-center text-gray-600">
                Нет аккаунта? <a href="@Url.Action("Registration", "Home")" class="text-black hover:text-gray-700">Зарегистрироваться</a>
            </p>
        </div>
    </main>   
</body>
</html>
